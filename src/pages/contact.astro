---
import ContentLayout from '@/layouts/ContentLayout.astro';
import '@/styles/forms.astro';
import { table as userComments } from '@/db/schema/user-comments';
import { nanoid } from 'nanoid';

const db = Astro.locals.auth.config.db;

let formSuccess = false;
let formError = '';

if (Astro.request.method === 'POST') {
  try {
    const data = await Astro.request.formData();
    const name = data.get('name');
    const email = data.get('email');
    const subject = data.get('subject');
    const message = data.get('message');

    if (
      !name ||
      !email ||
      !subject ||
      !message ||
      typeof name !== 'string' ||
      typeof email !== 'string' ||
      typeof subject !== 'string' ||
      typeof message !== 'string'
    ) {
      formError = 'Please fill out all fields correctly.';
    } else {
      await db.insert(userComments).values({
        id: nanoid(),
        name,
        email,
        subject,
        message,
        userId: Astro.locals.user?.id
      });

      formSuccess = true;
    }
  } catch (error) {
    console.error('Error saving contact message:', error);
    formError = 'There was an error sending your message. Please try again.';
  }
}
---

<ContentLayout title='Contact'>
  <h1>Contact Us</h1>

  <div class='contact-grid'>
    <div class='contact-info-card'>
      <h2>Connect With Us</h2>
      <p>
        Have questions about our products or want to place an order? We'd love
        to hear from you!
      </p>
      <div class='social-links'>
        <a
          href='https://www.instagram.com/browndogbiscuits/'
          target='_blank'
          rel='noopener noreferrer'
          class='instagram-link'
        >
          <img
            src='/images/instagram.svg'
            alt='Instagram icon'
            class='social-icon'
          />
          <span>Message us to purchase and follow us on Instagram</span>
        </a>
      </div>
    </div>

    <div class='contact-form-card form-section'>
      <h2>Send Us a Message</h2>
      {
        formSuccess && (
          <div class='success-message'>
            Thank you for your message! We'll get back to you soon.
          </div>
        )
      }
      {formError && <div class='error-message'>{formError}</div>}

      {
        !formSuccess && (
          <form class='form' method='POST'>
            <div class='form-group'>
              <label for='name'>Name:</label>
              <input
                type='text'
                id='name'
                name='name'
                required=''
                value={`${Astro.locals.user?.firstName} ${Astro.locals.user?.lastName}`}
              />
            </div>

            <div class='form-group'>
              <label for='email'>Email:</label>
              <input
                type='email'
                id='email'
                name='email'
                required=''
                value={Astro.locals.user?.email}
              />
            </div>

            <div class='form-group'>
              <label for='subject'>Subject:</label>
              <select id='subject' name='subject' required=''>
                <option value=''>Select a subject</option>
                <option value='order'>Place an Order</option>
                <option value='question'>Product Question</option>
                <option value='wholesale'>Wholesale Inquiry</option>
                <option value='other'>Other</option>
              </select>
            </div>

            <div class='form-group'>
              <label for='message'>Message:</label>
              <textarea id='message' name='message' rows='5' required='' />
            </div>

            <button type='submit' class='cta-button'>
              Send Message
            </button>
          </form>
        )
      }
    </div>
  </div>
</ContentLayout>

<style>
  .contact-grid {
    display: grid;
    grid-template-columns: 1fr;
    gap: 2rem;
    margin-bottom: 2rem;
  }
  .form-section.contact-form-card {
    margin: 0;
  }

  .contact-info-card,
  .contact-form-card {
    background-color: var(--color-primary-light);
    border-radius: 0.5rem;
    padding: 2rem;
  }

  .contact-info-card h2,
  .contact-form-card h2 {
    color: var(--color-primary);
    margin-bottom: 1rem;
    font-size: 1.5rem;
  }

  .social-links {
    margin-top: 1.5rem;
  }

  .instagram-link {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    color: var(--color-primary);
    text-decoration: none;
    font-weight: bold;
    padding: 0.5rem;
    transition: color 0.3s;
  }

  .instagram-link:hover {
    color: var(--color-accent);
  }

  .social-icon {
    width: 24px;
    height: 24px;
  }

  @media (min-width: 768px) {
    .contact-grid {
      grid-template-columns: repeat(2, 1fr);
    }
  }

  @media (min-width: 1024px) {
    .content-container {
      padding: 3rem;
    }
  }

  .success-message {
    background-color: #d4edda;
    color: #155724;
    padding: 1rem;
    border-radius: 0.25rem;
    margin-bottom: 1rem;
  }

  .error-message {
    background-color: #f8d7da;
    color: #721c24;
    padding: 1rem;
    border-radius: 0.25rem;
    margin-bottom: 1rem;
  }
</style>
